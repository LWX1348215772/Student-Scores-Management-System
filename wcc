#include <iostream>
#include <stdlib.h>
#include <string>
using namespace std;

const int n = 3;
struct date
{
	int namber;
	string name;
	int score[n];
	int sum;
	int pinjun;
};
struct date cj[n + 1];

void printfs_start()
{
	cout << "Management for Students' scores" << endl;
	cout << "1.Input record" << endl;
	cout << "2.Caculate total and average score of every course" << endl;
	cout << "3.Caculate total and average score of every student" << endl;
	cout << "4.Sort in descending order by score" << endl;
	cout << "5.Sort in ascending order by score" << endl;
	cout << "6.Sort in ascending order by number" << endl;
	cout << "7.Sort in dictionary order by name" << endl;
	cout << "8.Search by number" << endl;
	cout << "9.Search by name" << endl;
	cout << "10.Statistic analysis" << endl;
	cout << "11.List record" << endl;
	cout << "0.Exit" << endl;
	cout << "Please Input your choice :";
}

void printfs_middle(int a)
{
	cout << cj[a].namber << "\t";
	cout << cj[a].name << "\t";
	cout << cj[a].score[0] << "\t";
	cout << cj[a].score[1] << "\t";
	cout << cj[a].score[2] << "\t";
	cout << cj[a].sum << "\t";
	cout << cj[a].pinjun << endl;
}

void score_list(int sym)//sym=4为大到小；5为小到大。
{
	int a;
	int temp[n + 1];
	for (int i = 1; i <= n; i++)
	{
		temp[i] = cj[i].sum;
	}

	for (int i = 1; i <=n; i++)
	{
		a = 1;
		for (int j =1; j <= n; j++)
		{
			if (sym == 4) a = temp[j] > temp[a] ? j : a;
			if (sym == 5) a = temp[j] < temp[a] ? j : a;
		}
		if (sym == 4) temp[a] = 0;
		if (sym == 5) temp[a] = 999999;
		
		printfs_middle(a);
	}
	cout << endl;
}

