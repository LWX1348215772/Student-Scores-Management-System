{
	int a = 1;

}

void name_list()
{

}

int main()
{
	cj[3].name = "wcc3", cj[1].name = "wcc1", cj[2].name = "wcc2";
	cj[3].namber = 22, cj[1].namber = 33, cj[2].namber = 44;
	cj[3].score[0] = 22, cj[1].score[0] = 33, cj[2].score[0] = 44;
	cj[3].score[1] = 22, cj[1].score[1] = 33, cj[2].score[1] = 44;
	cj[3].score[2] = 22, cj[1].score[2] = 33, cj[2].score[2] = 44;
	cj[3].sum = 66, cj[1].sum = 99, cj[2].sum = 132;
	cj[3].pinjun = 22, cj[1].pinjun = 33, cj[2].pinjun = 44;

	while (1)
	{
		printfs_start();
		int total;
		cin >> total;
		switch (total)
		{
			case 4:
				printf("Sort in descending order by score:\n");
				score_list(total);
				break;
			case 5:
				printf("Sort in ascending order by score:\n");
				score_list(total);
				break;
			case 6:
				printf("Sort in ascending order by number:");
				namber_list();
				break;
			case 7:
				printf("Sort in dictionary order by name:");
				name_list();
				break;
			case 0:
				return 0;
		}
	}
	
	system("pause");
	return 0;
}
